<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@color/viewline"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:background="@drawable/shape_normal"
            android:layout_height="match_parent">



            <TextView
                android:id="@+id/item_date_blood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/threesize"
                android:text="时间"
                android:layout_centerInParent="true"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_mor_befor"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/shape_normal"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_mor_befor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="早餐前"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_mor_after"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/shape_normal"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_mor_after"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="早餐后"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_lunch_before"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/shape_normal"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_lunch_before"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="午餐前"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_lunch_after"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/shape_normal"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_lunch_after"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="午餐后"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_dinner_before"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/shape_normal"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_dinner_before"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="晚餐前"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_dinner_after"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/shape_normal"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_dinner_after"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="晚餐后"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_sleepbefore"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/shape_normal"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_sleebefore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="睡觉前"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
