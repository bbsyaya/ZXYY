<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="59dp"
    android:id="@+id/list_itease_layout"
    android:background="#ffffff"
    android:gravity="center_vertical" >

    <RelativeLayout
        android:id="@+id/avatar_container"
        android:layout_width="59dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true" >

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher2" />

        <RelativeLayout
            android:id="@+id/cjs_rl_xhd"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            >
            <com.hyphenate.easeui.widget.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/unread_msg_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:layout_centerInParent="true"/>


        </RelativeLayout>



    </RelativeLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/avatar_container"
        android:textColor="#333333"
        tools:text="异常数据"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        tools:text="上午 09:23"
        android:textColor="#999999"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/msg_state"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@id/avatar_container"
        android:src="@drawable/ease_msg_state_fail_resend"
        android:visibility="gone" />

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textSize="14sp"-->
        <!--android:text="@string/were_mentioned"-->
        <!--android:textColor="#e84e40"-->
        <!--android:id="@+id/mentioned"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_toRightOf="@id/msg_state"-->
        <!--android:paddingTop="7dp"-->
        <!--android:paddingBottom="7dp"-->
        <!--android:paddingLeft="7dp"-->
        <!--android:visibility="visible"-->
        <!--/>-->

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/chathis_tv_ty"
        android:singleLine="true"
        android:ellipsize="end"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        tools:text="您的哈偶有东岸尚景的按实际的刘看山大家都快乐即可来得及啊"
        android:textColor="#999999"
        android:textSize="14sp"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name" />

    <TextView
        android:id="@+id/chathis_tv_ty"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:text="同意"
        android:textSize="14dp"
        android:textColor="#ffffff"
        android:background="@drawable/shape_main_color"
        android:visibility="visible"/>



</RelativeLayout>