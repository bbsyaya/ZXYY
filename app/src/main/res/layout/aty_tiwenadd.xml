<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/homebgc"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/edittext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="请输入体温值"
            android:inputType="numberDecimal"
            android:maxEms="10"
            android:maxLength="5"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/twosize" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:text="请选择测量时间"
        android:textSize="@dimen/twosize"
        android:textColor="@color/textcolor"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/viewline"/>
  <RelativeLayout
      android:id="@+id/tiwen_ll_1"
      android:layout_width="match_parent"
      android:layout_height="40dp">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="7:00-12:00"
          android:textSize="@dimen/twosize"
          android:textColor="@color/textcolor"
          android:gravity="center_vertical"
          android:layout_marginLeft="30dp"/>

      <CheckBox
          android:id="@+id/tiwen_checkbox1"
          style="@style/SouSuoCheckboxTheme"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@null"
          android:scaleX="0.6"
          android:scaleY="0.6"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:layout_marginRight="20dp"
          android:focusable="false"
          android:clickable="false"
          android:enabled="false"/>


  </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/viewline"/>
    <RelativeLayout
        android:id="@+id/tiwen_ll_2"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="12:00-18:00"
            android:textSize="@dimen/twosize"
            android:textColor="@color/textcolor"
            android:gravity="center_vertical"
            android:layout_marginLeft="30dp"/>

        <CheckBox
            android:id="@+id/tiwen_checkbox2"
            style="@style/SouSuoCheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:focusable="false"
            android:clickable="false"
            android:enabled="false"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/viewline"/>

    <RelativeLayout
        android:id="@+id/tiwen_ll_3"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="18:00-7:00"
            android:textSize="@dimen/twosize"
            android:textColor="@color/textcolor"
            android:gravity="center_vertical"
            android:layout_marginLeft="30dp"/>

        <CheckBox
            android:id="@+id/tiwen_checkbox3"
            style="@style/SouSuoCheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:focusable="false"
            android:clickable="false"
            android:enabled="false"/>


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/viewline"/>

    <Button
        android:id="@+id/temp_btn_sure"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/shape_main_color"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/twosize" />

</LinearLayout>
