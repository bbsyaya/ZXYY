<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/homebgc">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mainleft"
            android:layout_marginRight="@dimen/mainright">
            <TextView
                android:id="@+id/tv_id_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/threesize"
                android:layout_centerVertical="true"
                android:textColor="@color/shallowColor"
                android:text="今天"/>
            <TextView
                android:id="@+id/tv_id_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/threesize"
                android:layout_toRightOf="@+id/tv_id_day"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:textColor="@color/shallowColor"
                android:text="周日"/>
            <TextView
                android:id="@+id/tv_id_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/firstsize"
                android:textColor="@color/textcolor"
                android:layout_centerVertical="true"
                android:text="+30"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="@dimen/mainleft"
            android:layout_marginRight="@dimen/mainright">
            <TextView
                android:id="@+id/tv_id_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/threesize"
                android:layout_centerVertical="true"
                android:textColor="@color/shallowColor"
                android:text="11-27"/>
            <TextView
                android:id="@+id/tv_id_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/threesize"
                android:textColor="@color/shallowColor"
                android:layout_centerVertical="true"
                android:text="就是你-转账"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
