<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/homebgc">
    <include layout="@layout/title_layout" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/homebgc">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/secendSize"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/mainleft"
            android:text="自定义咨询费用"/>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/viewline" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white">
        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/shouxie_default"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/mainleft"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/mainright"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_perday"
                android:layout_width="86dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:inputType="number"
                android:digits="0123456789."
                android:cursorVisible="true"
                android:textCursorDrawable="@drawable/test_cursor"
                android:hint="请输入金额"
                android:textColorHint="@color/shallowColor"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/threesize"
                android:background="@drawable/btn_white_shape"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/threesize"
                android:textColor="@color/maincolor"
                android:layout_marginLeft="20dp"
                android:text="元"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/threesize"
                android:textColor="@color/textcolor"
                android:text="/天"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/mainleft"
        android:layout_marginRight="@dimen/mainright"
        android:background="@color/viewline" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white">
        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/shouxie_default"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/mainleft"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/mainright"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_perweek"
                android:layout_width="86dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:inputType="number"
                android:digits="0123456789."
                android:hint="请输入金额"
                android:cursorVisible="true"
                android:textCursorDrawable="@drawable/test_cursor"
                android:textColorHint="@color/shallowColor"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/threesize"
                android:background="@drawable/btn_white_shape"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/threesize"
                android:textColor="@color/maincolor"
                android:layout_marginLeft="20dp"
                android:text="元"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/threesize"
                android:textColor="@color/textcolor"
                android:text="/周"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/mainleft"
        android:layout_marginRight="@dimen/mainright"
        android:background="@color/viewline" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white">
        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/shouxie_default"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/mainleft"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/mainright"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_permonth"
                android:layout_width="86dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:inputType="number"
                android:digits="0123456789."
                android:cursorVisible="true"
                android:textCursorDrawable="@drawable/test_cursor"
                android:hint="请输入金额"
                android:textColorHint="@color/shallowColor"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/threesize"
                android:background="@drawable/btn_white_shape"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/threesize"
                android:textColor="@color/maincolor"
                android:layout_marginLeft="20dp"
                android:text="元"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/threesize"
                android:textColor="@color/textcolor"
                android:text="/月"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/mainleft"
        android:layout_marginRight="@dimen/mainright"
        android:background="@color/viewline" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white">
        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/shouxie_default"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/mainleft"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/mainright"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_peryear"
                android:layout_width="86dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:inputType="number"
                android:digits="0123456789."
                android:hint="请输入金额"
                android:cursorVisible="true"
                android:textCursorDrawable="@drawable/test_cursor"
                android:textColorHint="@color/shallowColor"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/threesize"
                android:background="@drawable/btn_white_shape"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/threesize"
                android:textColor="@color/maincolor"
                android:layout_marginLeft="20dp"
                android:text="元"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/threesize"
                android:textColor="@color/textcolor"
                android:text="/年"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/viewline" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/homebgc">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/secendSize"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/mainleft"
            android:text="免费消息条数"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/viewline" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mainleft"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="17dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/threesize"
                android:textColor="@color/textcolor"
                android:text="患者可享受免费信息"/>
            <TextView
                android:id="@+id/tv_freetips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/threesize"
                android:textColor="@color/maincolor"
                android:text="20"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/threesize"
                android:textColor="@color/textcolor"
                android:text="条"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/mainleft"
            android:layout_marginRight="@dimen/mainright">
            <RelativeLayout
                android:id="@+id/rl_10tips"
                android:layout_width="68dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/btn_white_shape">
                <TextView
                    android:id="@+id/tv_10tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/threesize"
                    android:textColor="@color/textcolor"
                    android:layout_centerInParent="true"
                    android:text="10条"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_20tips"
                android:layout_width="68dp"
                android:layout_height="28dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_maincolor_shape">
                <TextView
                    android:id="@+id/tv_20tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/threesize"
                    android:textColor="@color/maincolor"
                    android:layout_centerInParent="true"
                    android:text="20条"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/forthSize"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/money_red"
                    android:text="荐"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_50tips"
                android:layout_width="68dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_white_shape">
                <TextView
                    android:id="@+id/tv_50tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/threesize"
                    android:textColor="@color/textcolor"
                    android:layout_centerInParent="true"
                    android:text="50条"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="17dp"
            android:layout_marginLeft="@dimen/mainleft"
            android:layout_marginRight="@dimen/mainright">
            <RelativeLayout
                android:id="@+id/rl_100tips"
                android:layout_width="68dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/btn_white_shape">
                <TextView
                    android:id="@+id/tv_100tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/threesize"
                    android:textColor="@color/textcolor"
                    android:layout_centerInParent="true"
                    android:text="100条"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_200tips"
                android:layout_width="68dp"
                android:layout_height="28dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_white_shape">
                <TextView
                    android:id="@+id/tv_200tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/threesize"
                    android:textColor="@color/textcolor"
                    android:layout_centerInParent="true"
                    android:text="200条"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_500tips"
                android:layout_width="68dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_white_shape">
                <TextView
                    android:id="@+id/tv_500tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/threesize"
                    android:textColor="@color/textcolor"
                    android:layout_centerInParent="true"
                    android:text="500条"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
