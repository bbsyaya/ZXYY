<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/homebgc"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="17dp"
                android:background="@color/viewline" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_fm_head"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/mainleft"
                    android:background="@mipmap/ic_default_pic" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="17dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_fm_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="张伟明 大夫"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/secendsize" />

                    <TextView
                        android:id="@+id/tv_fm_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:text="用户号 : 5001"
                        android:textColor="@color/shallowColor"
                        android:textSize="@dimen/twosize" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/viewline" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="17dp"
                android:background="@color/viewline" />

            <RelativeLayout
                android:id="@+id/rl_fm_setremark"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/selector_viewgroup_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/mainleft"
                    android:text="设置备注"
                    android:textColor="@color/deepColor"
                    android:textSize="@dimen/secendsize" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/viewline" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="17dp"
                android:background="@color/viewline" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/mainleft"
                    android:text="性别"
                    android:textColor="@color/deepColor"
                    android:textSize="@dimen/secendsize" />

                <TextView
                    android:id="@+id/tv_fm_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/mainright"
                    android:gravity="right|center_vertical"
                    android:text="男"
                    android:textColor="@color/shallowColor"
                    android:textSize="@dimen/twosize" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/viewline" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/mainleft"
                    android:text="年龄"
                    android:textColor="@color/deepColor"
                    android:textSize="@dimen/secendsize" />

                <TextView
                    android:id="@+id/tv_fm_old"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/mainright"
                    android:gravity="right|center_vertical"
                    android:text="35"
                    android:textColor="@color/shallowColor"
                    android:textSize="@dimen/twosize" />
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rl_fm_job"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/viewline" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/mainleft"
                    android:text="职称"
                    android:textColor="@color/deepColor"
                    android:textSize="@dimen/secendsize" />

                <TextView
                    android:id="@+id/tv_fm_job"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/mainright"
                    android:gravity="right|center_vertical"
                    android:text="副主任医师"
                    android:textColor="@color/shallowColor"
                    android:textSize="@dimen/twosize" />
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rl_fm_section"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/viewline" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/mainleft"
                    android:text="所在科室"
                    android:textColor="@color/deepColor"
                    android:textSize="@dimen/secendsize" />

                <TextView
                    android:id="@+id/tv_fm_section"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/mainright"
                    android:gravity="right|center_vertical"
                    android:text="副主任医师"
                    android:textColor="@color/shallowColor"
                    android:textSize="@dimen/twosize" />
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rl_fm_disease"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/viewline" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/mainleft"
                    android:text="擅长疾病"
                    android:textColor="@color/deepColor"
                    android:textSize="@dimen/secendsize" />

                <TextView
                    android:id="@+id/tv_fm_disease"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/mainright"
                    android:gravity="right|center_vertical"
                    android:text="副主任医师"
                    android:textColor="@color/shallowColor"
                    android:textSize="@dimen/twosize" />
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rl_fm_hospital"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/viewline" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/mainleft"
                    android:text="所在医院"
                    android:textColor="@color/deepColor"
                    android:textSize="@dimen/secendsize" />

                <TextView
                    android:id="@+id/tv_fm_hospital"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/mainright"
                    android:gravity="right|center_vertical"
                    android:text="石家庄肾病医院"
                    android:textColor="@color/shallowColor"
                    android:textSize="@dimen/twosize" />
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/viewline" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/mainleft"
                    android:text="家庭住址"
                    android:textColor="@color/deepColor"
                    android:textSize="@dimen/secendsize" />

                <TextView
                    android:id="@+id/tv_fm_address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/mainright"
                    android:gravity="right|center_vertical"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:text="河北石家庄"
                    android:textColor="@color/shallowColor"
                    android:textSize="@dimen/twosize" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/viewline" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_fm_gxqm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/mainleft"
                    android:layout_marginTop="16dp"
                    android:text="个性签名"
                    android:textColor="@color/deepColor"
                    android:textSize="@dimen/secendsize" />

                <TextView
                    android:id="@+id/tv_fm_signature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_fm_gxqm"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="@dimen/mainleft"
                    android:layout_marginRight="@dimen/mainleft"
                    android:layout_marginTop="11dp"
                    android:text="       空间打开就爱看的煎熬了肯德基卡即可借记卡时间段水电费是否是胜多负少的发送到发送到发送到发送到防守打法稍等发送"
                    android:textColor="@color/shallowColor"
                    android:textSize="@dimen/twosize" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
