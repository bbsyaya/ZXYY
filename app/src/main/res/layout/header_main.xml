<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/maincolor">
        <ImageView
            android:id="@+id/left_img_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher2"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:id="@+id/iv_head_medal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_medal_default"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="3dp"
            android:layout_alignBottom="@+id/left_img_head"
            android:layout_toLeftOf="@+id/left_tv_uesrname"
            android:layout_toStartOf="@+id/left_tv_uesrname"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/left_tv_uesrname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="嘿嘿嘿"
            android:textColor="@color/textcolor"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:layout_alignTop="@+id/left_img_head"
            android:layout_toRightOf="@+id/left_img_head"
            android:layout_toEndOf="@+id/left_img_head"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" />
        <TextView
            android:id="@+id/tv_isdoctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/left_doctor"
            android:textColor="@color/textcolor"
            android:layout_marginLeft="12dp"
            android:textSize="16sp"
            android:layout_alignBottom="@+id/left_tv_uesrname"
            android:layout_toRightOf="@+id/left_tv_uesrname"
            android:layout_toEndOf="@+id/left_tv_uesrname"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/iv_erweima"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/erweima_hui"
            android:layout_below="@+id/left_tv_uesrname"
            android:layout_alignLeft="@+id/left_tv_uesrname"
            android:layout_alignStart="@+id/left_tv_uesrname" />
    </RelativeLayout>
</LinearLayout>
