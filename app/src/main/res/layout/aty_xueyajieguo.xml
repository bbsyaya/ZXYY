<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/homebgc"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zhixinyisheng.user.view.blood.MagicProgressCircle

            android:id="@+id/main_mpc_gy"
            android:layout_width="200dip"
            android:layout_height="200dip"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dip"
            app:mpc_stroke_width="12dip" />

        <com.zhixinyisheng.user.view.blood.MagicProgressCircle1
            android:id="@+id/main_mpc_dy"
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:layout_centerInParent="true"
            app:mpc_stroke_width="12dip">

        </com.zhixinyisheng.user.view.blood.MagicProgressCircle1>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_xueya_below"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="@string/xueyazhi"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/ll_xueya_below"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_xueyayuanxin_gaoya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#28ced5"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / "
                    android:textColor="#28ced5"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_xueyayuanxin_diya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#28ced5"
                    android:textSize="22sp" />
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
    <LinearLayout
        android:id="@+id/xueya_fanwei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xin_iv"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/xinlvzhi_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gaoya"
                android:textColor="#00b9bb"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/xinlvzhi_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x45"
                android:text="@string/diya"
                android:textColor="#00b9bb"
                android:textSize="20sp" />
        </LinearLayout>

        <!--<ImageView-->
        <!--android:id="@+id/canshu_iv1"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="@dimen/x70"-->
        <!--android:layout_below="@+id/canshu_iv"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginLeft="@dimen/x20"-->
        <!--android:layout_marginRight="@dimen/x20"-->
        <!--android:layout_marginTop="@dimen/x30"-->
        <!--android:background="@drawable/img_xueyacankao" />-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mainleft"
            android:layout_marginRight="@dimen/mainright"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_white_shape">

            <TextView
                android:id="@+id/tv_person_signature2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:text="@string/cankaozhi"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/twosize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_person_signature2"
                android:layout_alignStart="@+id/tv_person_signature2"
                android:layout_below="@+id/tv_person_signature2"
                android:layout_marginTop="3dp"
                android:text="@string/zhengchangshousuoya"
                android:layout_marginRight="5dp"
                android:textColor="@color/textcolor"
                android:textSize="13sp"
                android:id="@+id/textView13" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jinggao130"
                android:textColor="@color/textcolor"
                android:textSize="13sp"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/textView13"
                android:layout_alignLeft="@+id/textView13"
                android:layout_alignStart="@+id/textView13"
                android:id="@+id/textView14" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weixianshousuoya"
                android:textColor="@color/textcolor"
                android:textSize="13sp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="8dp"
                android:layout_below="@+id/textView14"
                android:layout_alignLeft="@+id/textView14"
                android:layout_alignStart="@+id/textView14" />
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>
