<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="59dp"
    android:id="@+id/list_itease_layout"
    android:background="@color/common_bg"
    android:gravity="center_vertical" >

    <RelativeLayout
        android:id="@+id/avatar_container"
        android:layout_width="59dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true" >

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher2" />





    </RelativeLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="6dp"
        android:text="@string/were_mentioned"
        android:layout_toRightOf="@id/avatar_container"
        android:textColor="@color/textcolor"
        android:textSize="16sp" />



    <ImageView
        android:id="@+id/msg_state"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@id/avatar_container"
        android:src="@drawable/ease_msg_state_fail_resend"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="@string/were_mentioned"
        android:textColor="#cccccc"
        android:id="@+id/mentioned"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/msg_state"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingLeft="7dp"
        android:visibility="visible"
        />



    <TextView
        android:id="@+id/chathis_tv_ty"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="已同意"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:background="@drawable/btn_grean_selector"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/chathis_tv_ty_yitianjia"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="已同意"
        android:textColor="#cccccc"
        android:textSize="13sp"
        android:background="@color/homebgc"
        android:visibility="gone"/>



</RelativeLayout>