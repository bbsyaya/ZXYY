<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_xinlvshoudong"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/homebgc">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/homebgc"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/Lv"
                android:layout_width="179dp"
                android:layout_height="160dp"
                android:layout_marginTop="25dp"
                android:layout_centerHorizontal="true"
                android:background="@color/homebgc">

                <com.zhixinyisheng.user.view.BatteryView2
                    android:id="@+id/mybatteryview2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#cccccc"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:id="@+id/xinlv_xin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/sy_img_xl__02"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_xinlvshoudongshuru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Lv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/maincolor"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/xinlv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_xinlvshoudongshuru"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="@string/home_heartRate" />

            <TextView
                android:id="@+id/cifen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/xinlv3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="@string/heartUnit" />

            <EditText
                android:id="@+id/et_xinlvshoudonshuru"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_below="@+id/cifen"
                android:layout_gravity="center"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="@dimen/mainleft"
                android:layout_marginRight="@dimen/mainright"
                android:layout_marginTop="10dip"
                android:background="@drawable/btn_white_shape"
                android:gravity="center"
                android:hint="@string/inputValue"
                android:textColorHint="@color/shallowColor"
                android:inputType="number"
                android:maxLength="3" />

        </RelativeLayout>

        <Button
            android:id="@+id/btn_xinlvshuru"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/buttonBottom"
            android:layout_marginLeft="@dimen/mainleft"
            android:layout_marginRight="@dimen/mainright"
            android:background="@drawable/shape_gray_color"
            android:text="@string/submit"
            android:textSize="@dimen/font_button"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </RelativeLayout>
</LinearLayout>
