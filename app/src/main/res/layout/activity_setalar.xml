<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/homebgc" >
    <include layout="@layout/title_layout"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">
    <TextView
        android:id="@+id/sala_tvzxyc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_marginLeft="@dimen/x10"
        android:gravity="center_vertical"
        android:text="只响一次"
        android:textSize="@dimen/x12"
        android:textColor="#ff00B9BB" />

    <View
        android:id="@+id/sala_vizxyc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_below="@id/sala_tvzxyc"
        android:background="#cccccc" />

    <RelativeLayout
        android:id="@+id/sala_rlcf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_below="@+id/sala_vizxyc"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10" >

        <LinearLayout
            android:id="@+id/sala_llcf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/sala_ivxx"
                android:layout_width="@dimen/x14"
                android:layout_height="@dimen/x14"
                android:layout_centerVertical="true"
                android:src="@drawable/xiangxia" />

            <TextView
                android:id="@+id/sala_tvcf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x5"
                android:text="重复" 
                android:textSize="@dimen/x12"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/sala_vi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_below="@id/sala_rlcf"
        android:background="#cccccc" />

    <ScrollView
        android:id="@+id/sala_scll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sala_vi"
        android:layout_above="@+id/sala_rlt"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/sala_rlxz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <CheckBox
                android:id="@+id/sala_cb1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:text="周一"
                android:layout_marginLeft="@dimen/x10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="#cccccc" />

            <CheckBox
                android:id="@+id/sala_cb2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:text="周二"
                android:layout_marginLeft="@dimen/x10" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="#cccccc" />

            <CheckBox
                android:id="@+id/sala_cb3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:text="周三" 
                android:layout_marginLeft="@dimen/x10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="#cccccc" />

            <CheckBox
                android:id="@+id/sala_cb4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:text="周四" 
                android:layout_marginLeft="@dimen/x10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="#cccccc" />

            <CheckBox
                android:id="@+id/sala_cb5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:text="周五" 
                android:layout_marginLeft="@dimen/x10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="#cccccc" />

            <CheckBox
                android:id="@+id/sala_cb6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:text="周六"
                android:layout_marginLeft="@dimen/x10" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="#cccccc" />

            <CheckBox
                android:id="@+id/sala_cb7"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:text="周日" 
                android:layout_marginLeft="@dimen/x10"/>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/sala_rlt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:layout_above="@+id/sala_tp"
        android:background="#00B9BB" >

        <TextView
            android:id="@+id/sala_tvt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="aaaaaa"
            android:textColor="#ffffff"
            android:textSize="@dimen/x12" />
    </RelativeLayout>

    <TimePicker
        android:id="@+id/sala_tp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/x10" />
    </RelativeLayout>
</LinearLayout>