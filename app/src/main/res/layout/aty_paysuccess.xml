<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/homebgc">
    <include layout="@layout/title_layout" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/secendSize"
            android:textColor="@color/textcolor"
            android:drawableLeft="@mipmap/ic_success"
            android:drawablePadding="10dp"
            android:text="@string/zhifuchenggong"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/viewline"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/homebgc">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/mainleft"
            android:background="@mipmap/ic_verticalline"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/secendSize"
            android:textColor="@color/textcolor"
            android:layout_marginLeft="7dp"
            android:text="@string/gengduotuijianyisheng"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/viewline"/>
    <ListView
        android:id="@+id/lv_paysuccess"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/hintcolor"
        android:dividerHeight="1.0px">
    </ListView>
</LinearLayout>
