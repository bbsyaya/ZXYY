<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/homebgc">
    <include layout="@layout/title_layout" />
    <RelativeLayout
        android:id="@+id/rl_personal_avatar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/selector_viewgroup_bg"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ProfilePhoto"
            android:textSize="@dimen/font_samll"
            android:textColor="@color/gray_333"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"/>
        <ImageView
            android:id="@+id/iv_personal_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            tools:src="@mipmap/ic_launcher2"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/empty_bg"/>
    <LinearLayout
        android:id="@+id/ll_personal_nickname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/selector_viewgroup_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nickname"
            android:textSize="@dimen/font_samll"
            android:layout_gravity="center_vertical"
            android:textColor="@color/gray_333"
            android:layout_marginLeft="16dp"/>
        <TextView
            android:id="@+id/tv_personal_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:maxLength="15"
            android:gravity="end"
            android:textSize="@dimen/font_samll"
            android:textColor="@color/gray_99"
            android:text="@string/weitianxie"
            android:layout_marginRight="16dp"
            tools:text="啊实打实大声道萨达萨达阿萨德"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/empty_bg"/>
    <LinearLayout
        android:id="@+id/ll_personal_gender"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/selector_viewgroup_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Gender"
            android:textSize="@dimen/font_samll"
            android:layout_gravity="center_vertical"
            android:textColor="@color/gray_333"
            android:layout_marginLeft="16dp"/>
        <TextView
            android:id="@+id/tv_personal_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            android:textSize="@dimen/font_samll"
            android:textColor="@color/gray_99"
            android:text="@string/weitianxie"
            android:layout_marginRight="16dp"
            tools:text="男"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/empty_bg"/>
    <LinearLayout
        android:id="@+id/ll_personal_age"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/selector_viewgroup_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Age"
            android:textSize="@dimen/font_samll"
            android:layout_gravity="center_vertical"
            android:textColor="@color/gray_333"
            android:layout_marginLeft="16dp"/>
        <TextView
            android:id="@+id/tv_personal_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            android:textSize="@dimen/font_samll"
            android:textColor="@color/gray_99"
            android:text="@string/weitianxie"
            android:layout_marginRight="16dp"
            tools:text="20"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/empty_bg"/>
    <LinearLayout
        android:id="@+id/ll_personal_code"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/selector_viewgroup_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zhuanshuerweima"
            android:textSize="@dimen/font_samll"
            android:layout_gravity="center_vertical"
            android:textColor="@color/gray_333"
            android:layout_marginLeft="16dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            android:textSize="@dimen/font_samll"
            android:textColor="@color/gray_99"
            android:drawableRight="@mipmap/ic_qrcode"
            android:layout_marginRight="16dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/empty_bg"/>
    <LinearLayout
        android:id="@+id/ll_personal_country"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/selector_viewgroup_bg"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/guojia"
            android:textSize="@dimen/font_samll"
            android:layout_gravity="center_vertical"
            android:textColor="@color/gray_333"
            android:layout_marginLeft="16dp"/>
        <TextView
            android:id="@+id/tv_personal_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            android:textSize="@dimen/font_samll"
            android:textColor="@color/gray_99"
            android:text="@string/weitianxie"
            android:layout_marginRight="16dp"
            tools:text="中国"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/empty_bg"/>
    <LinearLayout
        android:id="@+id/ll_personal_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/selector_viewgroup_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/diqu"
            android:textSize="@dimen/font_samll"
            android:layout_gravity="center_vertical"
            android:textColor="@color/gray_333"
            android:layout_marginLeft="16dp"/>
        <TextView
            android:id="@+id/tv_personal_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            android:textSize="@dimen/font_samll"
            android:textColor="@color/gray_99"
            android:text="@string/weitianxie"
            android:layout_marginRight="16dp"
            tools:text="河北石家庄"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/empty_bg"/>
    <LinearLayout
        android:id="@+id/ll_personal_remark"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/selector_viewgroup_bg"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gexingqianming"
            android:textSize="@dimen/font_samll"
            android:layout_gravity="center_vertical"
            android:textColor="@color/gray_333"
            android:layout_marginLeft="16dp"/>
        <TextView
            android:id="@+id/tv_personal_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            android:textSize="@dimen/font_samll"
            android:textColor="@color/gray_99"
            android:text="@string/weitianxie"
            android:layout_marginRight="16dp"
            android:maxLength="40"
            tools:text="奥斯卡来得及卡老实交代啥恐龙当家看看实际的卡手机的卡三等奖卡机的卡手机的看卡拉时间到了看见圣诞节阿里看似简单卡视角大口径的 可是经典"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/empty_bg"/>
</LinearLayout>
